<h1 id="topics"><%= @topic.title %></h1>
<div class="col-md-6">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :title %> <strong>:</strong>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Topic title' %>
      </div>
        <%= f.submit "Save", class: 'btn btn-xs btn-info' %>
    <% end %>
</div>
