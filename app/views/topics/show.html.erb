<h1 id="topics"><%= @topic.title %></h1>
<% if user_is_authorized_for_topic? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-xs btn-info' %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-xs btn-info', data: {confirm: 'Are you sure you want to delete this topic?'}%>
<% end %>
<p>Bookmarks goes here.</p>
