<h1><%= @user.email %> </h1>
<h2> My Bookmarks </h2>
<div class="container">
  <div class="column" id="bookmarks">
      <% @user.bookmarks.each do |bookmark| %>
      <div class='col-md-3'>
        <%= link_to bookmark.title, topic_bookmark_path(bookmark.topic, bookmark) %>
        <br>
        <i class="glyphicon glyphicon-star"> </i>&nbsp;(<%= pluralize(bookmark.likes.count, 'like') %>)
      </div>
      <% end %>
  </div>
</div>
<br>
<h2> Liked </h2>
<div class="container">
  <div class="column" id="bookmarks">
      <% @user.likes.each do |like| %>
      <div class='col-md-3'>
        <% bookmark = Bookmark.find_by(id: like.bookmark_id) %>
        <%= link_to bookmark.title, topic_bookmark_path(bookmark.topic, bookmark) %>
        <br>
        <i class="glyphicon glyphicon-star"> </i>&nbsp;(<%= pluralize(bookmark.likes.count, 'like') %>)
      </div>
      <% end %>
  </div>
</div>
